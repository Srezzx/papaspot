<%- include("../partials/header"); %>

<style>
    h1 {
        font-size: 2rem;
    }
</style>

<div style="margin-top:15rem;" class="container">
    <form action="/kadabra/edit/<%= foundplace._id %>" method="POST">
        <h1>EDIT</h1>
        <div class="row">
            <div class="col-md-6 col-xs-12">
                <div class="form-group">
                    <label>Name</label>
                    <input type="String" placeholder="Enter Name of Place" name="name" class="form-control"
                        value="<%= foundplace.name %>" required>
                </div>
            </div>
            <div class="col-md-6 col-xs-12">
                <div class="form-group">
                    <label>Type</label>
                    <select id="type" name="type" class="browser-default custom-select" required>
                        <option hidden disabled Selected value="<%= foundplace.name %>"><%= foundplace.type %></option>
                        <option value="restaurant">Restaurant</option>
                        <option value="hangouts">Hangouts</option>
                        <option value="utilities">utilities</option>
                    </select>
                </div>
            </div>
            <div class="col-md-6 col-xs-12">
                <div class="form-group">
                    <label>Rating</label>
                    <input type="Number" step='0.01' placeholder="Enter rating out of 5" name="rating"
                        class="form-control" value="<%= foundplace.rating %>" required>
                </div>
            </div>
            <div class="col-md-6 col-xs-12">
                <div class="form-group">
                    <label>Nearby</label>
                    <input type="String" placeholder="Enter nearby landmark" value="<%= foundplace.nearby %>"
                        name="nearby" class="form-control" required>
                </div>
            </div>
            <div class="col-md-6 col-xs-12">
                <div class="form-group">
                    <label>Subtype</label>
                    <input type="String" placeholder="Enter Subtype(Like gym, movie etc)"
                        value="<%= foundplace.subtype %>" name="sub_type" class="form-control" required>
                </div>
            </div>
            <div class="col-md-6 col-xs-12">
                <div class="form-group">
                    <label>Cuisine(Pls give for Restaurant)</label>
                    <input type="String" placeholder="Enter types of food available" value="<%= foundplace.cuisine %>"
                        name="cuisine" class="form-control" required>

                </div>
            </div>
            <div class="col-md-6 col-xs-12">
                <div class="form-group">
                    <label>Payment Method</label>
                    <input type="String" placeholder="Enter payment methods available"
                        value="<%= foundplace.payment_method %>" name="payment_method" class="form-control" required>
                </div>
            </div>
            <div class="col-md-6 col-xs-12">
                <div class="form-group">
                    <label>Cost For 2</label>
                    <input type="String" placeholder="Enter Cost for 2 people" value="<%= foundplace.cost_for_two %>"
                        name="cost_for_two" class="form-control">
                </div>
            </div>
            <div class="col-md-6 col-xs-12">
                <div class="form-group">
                    <label>Must Try</label>
                    <input type="String" placeholder="Enter special must try dishes" value="<%= foundplace.must_try %>"
                        name="must_try" class="form-control">
                </div>
            </div>
            <div class="col-md-6 col-xs-12">
                <div class="form-group">
                    <label>Google Map source</label>
                    <input type="String" placeholder="Enter Google Map source" name="gmap_src"
                        value="<%= foundplace.gmap_src %>" class="form-control" required>
                </div>
            </div>
            <div class="form-group col-md-6 col-xs-12">
                <label>Inside/Outside campus</label>
                <select id="io_location" name="io_location" class="browser-default custom-select" required>
                    <option hidden disabled Selected value="<%= foundplace.io_location %>"><%= foundplace.io_location %>
                    </option>
                    <option value="inside">Inside Campus</option>
                    <option value="outside">Outside Campus</option>
                </select>
            </div>
            <div class="col-md-6 col-xs-12">
                <div class="form-group">
                    <label>Identity</label>
                    <input type="String" placeholder="Enter restraunt name in small without spaces"
                        value="<%= foundplace.identity %>" name="identity" class="form-control" required>
                </div>
            </div>
            <div class="col-md-6 col-xs-12">
                <div class="form-group">
                    <label>Open Timings</label>
                    <input type="String" placeholder="Enter timings seperated by a '-' (24 hr clock)"
                        value="<%= foundplace.open_timings %>" name="open_timings" class="form-control">
                </div>
            </div>
            <div class="col-md-6 col-xs-12">
                <div class="form-group">
                    <label>ETA</label>
                    <input type="Number" placeholder="Enter estimated time of arrival" value="<%= foundplace.eta %>"
                        name="eta" class="form-control">
                </div>
            </div>
            <div class="col-md-6 col-xs-12">
                <div class="form-group">
                    <label>Mode of Transport</label>
                    <input type="String" placeholder="Enter mode of transport"
                        value="<%= foundplace.mode_of_transport %>" name="mode_of_transport" class="form-control">
                </div>
            </div>
            <div class="col-md-6 col-xs-12">
                <div class="form-group">
                    <label>Crowd</label>
                    <input type="String" placeholder="Choose averge crowd condition" value="<%= foundplace.crowd %>"
                        name="crowd" class="form-control" required>
                </div>
            </div>
            <div class="col-md-6 col-xs-12">
                <div class="form-group">
                    <label>Website Link</label>
                    <input type="String" placeholder="Website Link" value="<%= foundplace.website %>" name="website"
                        class="form-control">
                </div>
            </div>
            <div class="col-md-6 col-xs-12">
                <div class="form-group">
                    <label>Air Conditioner</label>
                    <select id="ac" name="ac" class="browser-default custom-select" required>
                        <option hidden disabled Selected value="<%= foundplace.ac %>"><%= foundplace.ac %></option>
                        <option value="Fully Air Conditioned">Fully Air Conditioned</option>
                        <option value="Partially Air conditioned">Partially Air conditioned</option>
                        <option value="No Air Conditioner">No Air Conditioner</option>
                    </select>
                </div>
            </div>
            <div class="col-md-6 col-xs-12">
                <div class="form-group">
                    <label>Features</label>
                    <input type="String" placeholder="Enter 3  Features seperated by - "
                        value="<%= foundplace.features %>" name="features" class="form-control" required>
                </div>
            </div>
        </div>
        <button type="submit" class="btn btn-success">Add Place</button>
    </form>
</div>

<%- include("../partials/footer"); %>