<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">New message</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form action="/comments/request/<%= place._id %>" method="POST">
                <div class="modal-body">
                    <div class="form-group">
                        <label for="recipient-name" class="col-form-label">Name:</label>
                        <input type="text" name="comment_author" class="form-control" id="name" required>
                    </div>
                    <div class="form-group">
                        <label for="message-text" class="col-form-label">Comment:</label>
                        <textarea class="form-control" name="comment_content" id="comment" required></textarea>
                    </div>
                    <div class="form-group">
                        <label for="recipient-name" class="col-form-label">Instagram Id Link</label>
                        <input type="text" name="insta_id" class="form-control" id="insta_id" required>
                    </div>
                    <% var x= new Date(); %>
                    <div style="display:none;" class="form-group">
                        <label for="message-text" class="col-form-label">Today Date</label>
                        <input class="form-control" type="text" name="comment_date" id="date" value="<%= x %>"></input>
                    </div>
                    <div style="display:none;" class="form-group">
                        <label for="message-text" class="col-form-label">FAQ Quesiton</label>
                        <input class="form-control" type="text" name="faq_question" id="faq_1"></input>
                    </div>
                    <div style="display:none;" class="form-group">
                        <label for="message-text" class="col-form-label">FAQ Answer</label>
                        <input class="form-control" type="text" name="faq_answer" id="faq_2"></input>
                    </div>
                    <div style="display:none;" class="form-group">
                        <label for="message-text" class="col-form-label">Place identityname</label>
                        <input class="form-control" type="text" name="name_of_place" id="nameop"
                            value="<%= place.identity %>"></input>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button style="margin:20px;" type="submit" onclick="return confirmation_commentadd()"
                        class="btn btn-danger">Add
                        Comment</button>
                </div>
            </form>
        </div>
    </div>
</div>
