<%- include("../partials/header"); %>

<style>
    * {
        margin: 0px;
        padding: 0px;
    }

    body {
        font-family: 'Exo', sans-serif;
    }


    .context {
        width: 100%;
        position: fixed;
        top: 50vh;
    }

    .context h1 {
        text-align: center;
        color: #fff;
        font-size: 50px;
    }


    .area {
        width: 100%;
        height: 100%;


    }

    .circles {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        overflow: hidden;
    }

    .circles li {
        position: absolute;
        display: block;
        list-style: none;
        width: 20px;
        height: 20px;
        background: rgba(113, 0, 227, 0.5);
        animation: animate 25s linear infinite;
        bottom: -150px;

    }

    @media only screen and (max-width:768px) {
        .circles li:nth-child(10) {
            width: 90px;
            height: 90px;
        }

        .circles li:nth-child(7) {
            width: 60px;
            height: 60px;
        }
    }

    .circles li:nth-child(1) {
        left: 25%;
        width: 80px;
        height: 80px;
        animation-delay: 0s;
        border-radius: 45%;
    }


    .circles li:nth-child(2) {
        left: 10%;
        width: 20px;
        height: 20px;
        animation-delay: 2s;
        animation-duration: 12s;
        border-radius: 75%;
    }

    .circles li:nth-child(3) {
        left: 70%;
        width: 50px;
        height: 50px;
        animation-delay: 4s;
        border-radius: 250%;

    }

    .circles li:nth-child(4) {
        left: 40%;
        width: 60px;
        height: 60px;
        animation-delay: 0s;
        animation-duration: 18s;
        border-radius: 30%;
    }

    .circles li:nth-child(5) {
        left: 65%;
        width: 20px;
        height: 20px;
        animation-delay: 0s;
        border-radius: 30%;
    }

    .circles li:nth-child(6) {
        left: 65%;
        width: 110px;
        height: 110px;
        animation-delay: 3s;
        border-radius: 90%;

    }

    .circles li:nth-child(7) {
        left: 0%;
        width: 150px;
        height: 150px;
        animation-delay: 7s;
        border-radius: 10%;
    }

    .circles li:nth-child(8) {
        left: 50%;
        width: 25px;
        height: 25px;
        animation-delay: 15s;
        animation-duration: 45s;
        border-radius: 100%;
    }

    .circles li:nth-child(9) {
        left: 20%;
        width: 15px;
        height: 15px;
        animation-delay: 2s;
        animation-duration: 35s;
        border-radius: 80%;
    }

    .circles li:nth-child(10) {
        left: 85%;
        width: 150px;
        height: 150px;
        animation-delay: 0s;
        animation-duration: 11s;
        border-radius: 50%;
    }



    @keyframes animate {

        0% {
            transform: translateY(0) rotate(0deg);
            opacity: 1;
            border-radius: 0;
        }

        100% {
            transform: translateY(-1000px) rotate(720deg);
            opacity: 0;

        }

    }
</style>
