<%- include("../partials/header"); %>

<div class="container" style="margin-top: 5rem;">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="title my-3">
        <h2>Add a new article...</h2>
      </div>
      <div class="form-input">
        <form action="/add-articles" method="POST">
          <div class="form-group">
            <label for="title">Title</label>
            <input class="form-control" name="title" type="text" id="title" placeholder="Titile">
          </div>
          <div class="form-group">
            <label for="description">Description</label>
            <textarea class="form-control" type="text" name="desc" id="description" placeholder="Add a small description"></textarea>
          </div>
          <div class="form-group">
            <label for="image">Image</label>
            <input type="text" name="imageUrl" class="form-control" id="image" placeholder="Image URL">
          </div>
          <div class="form-group">
            <label for="content">Markdown</label>
            <textarea class="form-control" name="content" id="content"placeholder="Content ..." rows="10"></textarea>
          </div>
          <div class="form-group my-4">
            <button class="btn btn-primary">Create Post</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<%- include("../partials/footer"); %>
